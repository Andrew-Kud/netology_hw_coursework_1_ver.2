{# настройки входа для чтения логов #}
filebeat.inputs:
  - type: filestream
    enabled: true
    id: nginx-access
    paths:
      - /var/log/nginx/access.log
    fields:
      log_type: nginx_access
      environment: production

  - type: filestream
    enabled: true
    id: nginx-error
    paths:
      - /var/log/nginx/error.log
    fields:
      log_type: nginx_error
      environment: production

{# настройки вывода данных в elastic #}
output.elasticsearch:
  hosts: ["{{ elasticsearch_host }}:9200"]
  index: "filebeat-%{[agent.version]}-%{+yyyy.MM.dd}"

{# параметры шаблона filebeat (потом по этим ключам можешь в kibana искать) #}
setup.template.name: "filebeat"
setup.template.pattern: "filebeat-*"
setup.template.enabled: true
setup.template.overwrite: false

{# параметры логирования filebeat #}
logging.level: info
logging.to_files: true
logging.files:
  path: /var/log/filebeat
  name: filebeat.log
  keepfiles: 7
  permissions: 0644
