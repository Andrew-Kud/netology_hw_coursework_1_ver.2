global:
  # интервал опроса сбора метрик
  scrape_interval: 15s
  # ожидания сбора метрик
  scrape_timeout: 10s
  # интервал оценки правил и отправки алертов
  evaluation_interval: 15s

alerting:
  alertmanagers:
    - static_configs:
        - targets: []

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      # цел для сбора метрик - локальный прометеус
      - targets: ['localhost:9090']

  - job_name: 'node_exporter'
    scrape_interval: 15s
    scrape_timeout: 10s
    static_configs:
      - targets: ['{{ hostvars["web-d"]["ansible_host"] }}:9100']
        labels:
          server: 'web-d'
          zone: 'ru-central1-d'
          environment: 'production'

      - targets: ['{{ hostvars["web-b"]["ansible_host"] }}:9100']
        labels:
          server: 'web-b'
          zone: 'ru-central1-b'
          environment: 'production'

  - job_name: 'nginx_exporter'
    scrape_interval: 15s
    scrape_timeout: 10s
    static_configs:
      - targets: ['{{ hostvars["web-d"]["ansible_host"] }}:4927']
        labels:
          server: 'web-d'
          zone: 'ru-central1-d'
          exporter: 'log'

      - targets: ['{{ hostvars["web-b"]["ansible_host"] }}:4927']
        labels:
          server: 'web-b'
          zone: 'ru-central1-b'
          exporter: 'log'

  - job_name: 'nginx_stub_status'
    scrape_interval: 15s
    scrape_timeout: 10s
    static_configs:
      - targets: ['{{ hostvars["web-d"]["ansible_host"] }}:9113']
        labels:
          server: 'web-d'
          zone: 'ru-central1-d'
          exporter: 'stub_status'

      - targets: ['{{ hostvars["web-b"]["ansible_host"] }}:9113']
        labels:
          server: 'web-b'
          zone: 'ru-central1-b'
          exporter: 'stub_status'

  - job_name: 'prometheus_node'
    scrape_interval: 15s
    static_configs:
      - targets: ['localhost:9100']
        labels:
          server: 'prometheus'
          zone: 'ru-central1-a'
          environment: 'production'
